<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryDark">@color/app_bar_color</item>
        <item name="colorAccent">@color/app_bar_color</item>
    </style>
    <!-- Navigation Drawer Style -->
    <style name="NavigationDrawerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@drawable/drawer_menu_background</item>
    </style>

    <!-- Navigation Drawer Text Style -->
    <style name="NavigationDrawerTextStyle">
        <item name="android:textColor">#000000</item> <!-- Black text color -->
    </style>

</resources>
